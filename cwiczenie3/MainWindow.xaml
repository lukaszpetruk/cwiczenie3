<Window x:Class="cwiczenie3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cwiczenie3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="changeText" Content="Kliknięcie zmienia etykietę" HorizontalAlignment="Center" VerticalAlignment="Center" Click="changeText_Click"/>
        <CheckBox x:Name="enableCheckbox" Content="Włącza zmianę etykiety" Grid.Column="1" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Left" Margin="150,139,0,0" Grid.Row="1" Text="Naciśnij przycisk, aby zmienić tekst" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="22"/>

    </Grid>
</Window>
